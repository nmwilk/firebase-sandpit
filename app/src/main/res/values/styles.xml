<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="amount_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333</item>
        <item name="android:paddingBottom">@dimen/cell_padding_vert</item>
        <item name="android:paddingLeft">@dimen/cell_padding_horz</item>
        <item name="android:paddingRight">@dimen/cell_padding_horz</item>
        <item name="android:paddingTop">@dimen/cell_padding_vert</item>
    </style>

    <style name="title_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#666</item>
        <item name="android:paddingBottom">@dimen/cell_padding_vert</item>
        <item name="android:paddingLeft">@dimen/cell_padding_horz</item>
        <item name="android:paddingRight">@dimen/cell_padding_horz</item>
        <item name="android:paddingTop">@dimen/cell_padding_vert</item>
    </style>

    <style name="title_entry" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">#666</item>
        <item name="android:hint">@string/title_hint</item>
        <item name="android:inputType">textAutoCorrect</item>
    </style>

    <style name="amount_entry" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">#333</item>
        <item name="android:hint">@string/amount_hint</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
</resources>
